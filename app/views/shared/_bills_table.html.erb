<div class="overflow-hidden rounded-lg bg-white shadow">
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">
            <%= t('.unit', default: 'Unidad') %>
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">
            <%= t('.payer', default: 'Pagador') %>
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">
            <%= t('.period', default: 'Periodo') %>
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">
            <%= t('.amount', default: 'Monto') %>
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">
            <%= t('.due_date', default: 'Vencimiento') %>
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">
            <%= t('.status', default: 'Estado') %>
          </th>
          <th class="px-6 py-3 text-right text-xs font-medium uppercase tracking-wider text-gray-500">
            <%= t('.actions', default: 'Acciones') %>
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% if bills.any? %>
          <% bills.each do |bill| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900">
                  <% if namespace == :admin %>
                    <%= link_to "#{bill.unit.number} (#{bill.unit.tower})", admin_unit_path(bill.unit), class: "text-blue-600 hover:text-blue-900" %>
                  <% else %>
                    <%= link_to "#{bill.unit.number} (#{bill.unit.tower})", manage_organization_unit_path(bill.unit.organization, bill.unit), class: "text-blue-600 hover:text-blue-900" %>
                  <% end %>
                  <div class="text-xs text-gray-500"><%= bill.unit.organization.name %></div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900"><%= bill.unit.name.presence || "N/A" %></div>
                <div class="text-xs text-gray-500"><%= bill.unit.email %></div>
                <div class="text-xs text-gray-500"><%= bill.unit.mobile_number %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= bill.period %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= number_to_currency(bill.amount, unit: "$", separator: ".", delimiter: ".") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= bill.due_date ? bill.due_date.strftime("%d/%m/%Y") : "N/A" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%=
                  case bill.status
                  when 'paid'
                    'bg-green-100 text-green-800'
                  when 'pending'
                    'bg-yellow-100 text-yellow-800'
                  when 'failed'
                    'bg-red-100 text-red-800'
                  else
                    'bg-gray-100 text-gray-800'
                  end
                %>">
                  <%= bill.status.humanize %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <% if namespace == :admin %>
                  <%= link_to t('.view', default: 'Ver'), admin_bill_path(bill), class: "text-blue-600 hover:text-blue-900" %>
                <% else %>
                  <%= link_to t('.view', default: 'Ver'), manage_bill_path(bill), class: "text-blue-600 hover:text-blue-900" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="7" class="px-6 py-4 text-center text-sm text-gray-500">
              <%= t('.no_bills', default: 'No se encontraron cobros') %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
