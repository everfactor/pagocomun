<div class="space-y-6">
  <div class="grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-2">
    <div>
      <%= f.label :name, class: "block text-sm font-medium leading-6 text-gray-900" %>
      <div class="mt-2">
        <%= f.text_field :name, required: true, class: "block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm" %>
      </div>
    </div>

    <div>
      <%= f.label :rut, class: "block text-sm font-medium leading-6 text-gray-900" %>
      <div class="mt-2">
        <%= f.text_field :rut, required: true, class: "block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm" %>
      </div>
    </div>

    <% if Current.user.role_super_admin? %>
      <div>
        <%= f.label :org_type, class: "block text-sm font-medium leading-6 text-gray-900" %>
        <div class="mt-2">
          <%= f.select :org_type, options_for_select([
            [t('enums.organization.org_type.community'), 'community'],
            [t('enums.organization.org_type.rental_space'), 'rental_space']
          ], f.object.org_type || params[:org_type]), {}, {
            class: "block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm"
          } %>
        </div>
      </div>

      <% if f.object.new_record? %>
        <div>
          <%= f.label :owner_id, "DueÃ±o (Org Admin)", class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= f.collection_select :owner_id, User.where(role: 'org_admin'), :id, :email_address, { prompt: "Seleccione un administrador" }, { class: "block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm" } %>
          </div>
        </div>
      <% end %>
    <% else %>
      <%= f.hidden_field :org_type, value: f.object.new_record? ? params[:org_type] : f.object.org_type %>
    <% end %>

    <div class="sm:col-span-2">
      <%= f.label :address, class: "block text-sm font-medium leading-6 text-gray-900" %>
      <div class="mt-2">
        <%= f.text_field :address, class: "block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm" %>
      </div>
    </div>

    <div>
      <%= f.label :tbk_child_commerce_code, class: "block text-sm font-medium leading-6 text-gray-900" %>
      <div class="mt-2">
        <%= f.text_field :tbk_child_commerce_code, required: true, disabled: !Current.user.role_super_admin?, class: "block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm disabled:bg-gray-50 disabled:text-gray-500 disabled:ring-gray-200" %>
      </div>
    </div>

    <div class="sm:col-span-2">
      <%= f.label :note, class: "block text-sm font-medium leading-6 text-gray-900" %>
      <div class="mt-2">
        <%= f.text_area :note, rows: 4, class: "block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm" %>
      </div>
    </div>
  </div>

  <div class="flex items-center justify-end gap-x-6 pt-6 border-t border-gray-200">
    <%= link_to t('helpers.links.cancel'), cancel_path, class: "text-sm font-semibold leading-6 text-gray-900" %>
    <%= f.submit t('helpers.links.save'), class: "rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600" %>
  </div>
</div>
