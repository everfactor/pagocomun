<div class="space-y-6">
  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
    <div>
      <%= f.label :name, class: "block text-sm font-medium leading-6 text-gray-900" %>
      <div class="mt-2">
        <%= f.text_field :name, class: "block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm" %>
      </div>
    </div>

    <div>
      <%= f.label :pay_day, class: "block text-sm font-medium leading-6 text-gray-900" %>
      <div class="mt-2">
        <%= f.number_field :pay_day, min: 1, max: 31, class: "block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm" %>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
    <div>
      <%= f.label :number, class: "block text-sm font-medium leading-6 text-gray-900" %>
      <div class="mt-2">
        <%= f.text_field :number, required: true, class: "block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm" %>
      </div>
    </div>

    <div>
      <%= f.label :tower, class: "block text-sm font-medium leading-6 text-gray-900" %>
      <div class="mt-2">
        <%= f.text_field :tower, class: "block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm" %>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
    <div>
      <%= f.label :organization_id, class: "block text-sm font-medium leading-6 text-gray-900" %>
      <div class="mt-2">
        <% if organization %>
          <%= f.hidden_field :organization_id, value: organization.id %>
          <div class="block w-full rounded-md border-0 py-1.5 text-gray-900 bg-gray-50 shadow-sm ring-1 ring-inset ring-gray-300 sm:text-sm px-3">
            <%= organization.name %>
          </div>
        <% else %>
          <% organizations = Current.user.role_super_admin? ? Organization.all : Current.user.member_organizations %>
          <%= f.collection_select :organization_id, organizations, :id, :name, { prompt: t('helpers.select.prompt') }, { class: "block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm" } %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
    <div>
      <%= f.label :email, class: "block text-sm font-medium leading-6 text-gray-900" %>
      <div class="mt-2">
        <%= f.email_field :email, class: "block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm" %>
      </div>
    </div>

    <div>
      <%= f.label :mobile_number, class: "block text-sm font-medium leading-6 text-gray-900" %>
      <div class="mt-2">
        <%= f.text_field :mobile_number, placeholder: "+56982672160", class: "block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm" %>
      </div>
    </div>
  </div>

  <% if organization&.org_type_rental_space? || f.object.organization&.org_type_rental_space? %>
    <div class="border-t border-gray-200 pt-6">
      <h3 class="text-base font-semibold leading-7 text-gray-900">Datos de Arriendo</h3>
      <div class="mt-4 grid grid-cols-1 gap-6 sm:grid-cols-2">
        <div>
          <%= f.label :contract_start_on, "Fecha Inicio Contrato", class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= f.date_field :contract_start_on, class: "block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm" %>
          </div>
        </div>

        <div>
          <%= f.label :charge_mode, "Modalidad de Cobro", class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= f.select :charge_mode, [["CLP ($)", "clp"], ["UF", "uf"]], {}, { class: "block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm" } %>
          </div>
        </div>

        <div>
          <%= f.label :rent_amount, "Monto Arriendo", class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= f.number_field :rent_amount, step: 0.01, class: "block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm" %>
          </div>
        </div>

        <div>
          <%= f.label :ipc_adjustment, "Reajuste IPC", class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= f.select :ipc_adjustment, [["Mensual", "monthly"], ["Trimestral", "quarterly"], ["Cuatrimestral", "cuatrimestral"], ["Semestral", "semestral"], ["Anual", "annual"]], {}, { class: "block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm" } %>
          </div>
        </div>

        <div>
          <%= f.label :daily_interest_rate, "InterÃ©s diario de atraso (%)", class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= f.number_field :daily_interest_rate, step: 0.01, class: "block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="flex items-center justify-end gap-4 pt-4 border-t border-gray-200">
    <%= link_to t('helpers.links.cancel'), cancel_path, class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
    <%= f.submit t('helpers.links.save'), class: "rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500" %>
  </div>
</div>
