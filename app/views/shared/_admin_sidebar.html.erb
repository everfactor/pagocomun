<div class="relative flex grow flex-col gap-y-5 overflow-y-auto border-r border-gray-200 bg-white px-6 dark:border-white/10 dark:bg-gray-900 dark:before:pointer-events-none dark:before:absolute dark:before:inset-0 dark:before:bg-black/10">
  <div class="relative flex h-16 shrink-0 items-center">
    <%= link_to admin_dashboard_index_path, class: "flex items-center" do %>
      <span class="text-xl font-bold text-blue-600 dark:text-blue-400">Pago Com√∫n</span>
    <% end %>
  </div>

  <nav class="relative flex flex-1 flex-col">
    <ul role="list" class="flex flex-1 flex-col gap-y-7">
      <li>
        <ul role="list" class="-mx-2 space-y-1">
          <% admin_nav_items.each do |item| %>
            <% is_active = current_nav_item?(item[:path]) %>
            <li>
              <%= link_to item[:path], class: nav_item_classes(is_active) do %>
                <%= icon(item[:icon], classes: nav_icon_classes(is_active)) %>
                <%= item[:name] %>
              <% end %>
            </li>
          <% end %>
        </ul>
      </li>

      <% if admin_organizations.any? %>
        <li>
          <div class="text-xs/6 font-semibold text-gray-400">Your Organizations</div>
          <ul role="list" class="-mx-2 mt-2 space-y-1">
            <% admin_organizations.each do |org| %>
              <li>
                <%= link_to admin_organization_path(org), class: "group flex gap-x-3 rounded-md p-2 text-sm/6 font-semibold text-gray-700 hover:bg-gray-50 hover:text-blue-600 dark:text-gray-400 dark:hover:bg-white/5 dark:hover:text-white" do %>
                  <span class="flex size-6 shrink-0 items-center justify-center rounded-lg border border-gray-200 bg-white text-[0.625rem] font-medium text-gray-400 group-hover:border-blue-600 group-hover:text-blue-600 dark:border-white/15 dark:bg-white/5 dark:group-hover:border-white/20 dark:group-hover:text-white">
                    <%= org.name.first.upcase %>
                  </span>
                  <span class="truncate"><%= org.name %></span>
                <% end %>
              </li>
            <% end %>
          </ul>
        </li>
      <% end %>

      <li class="-mx-6 mt-auto">
        <div class="flex items-center gap-x-4 px-6 py-3">
          <% if Current.user %>
            <div class="size-8 rounded-full bg-blue-100 flex items-center justify-center text-blue-600 dark:bg-blue-900 dark:text-blue-300 outline -outline-offset-1 outline-black/5 dark:outline-white/10">
              <span class="text-sm font-semibold">
                <%= Current.user.first_name&.first || Current.user.email_address.first.upcase %>
              </span>
            </div>
            <span class="flex-1 text-sm/6 font-semibold text-gray-900 dark:text-white">
              <%= Current.user.first_name || Current.user.email_address %>
            </span>
          <% end %>
          <%= button_to logout_path, method: :delete, class: "text-xs text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200" do %>
            Logout
          <% end %>
        </div>
      </li>
    </ul>
  </nav>
</div>
