<div class="mx-auto max-w-7xl">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Dashboard</h1>
    <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">Overview of your system</p>
  </div>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
    <div class="overflow-hidden rounded-lg bg-white shadow dark:bg-gray-800">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="flex h-10 w-10 items-center justify-center rounded-md bg-blue-500 text-white">
              <%= icon(:organizations, classes: "h-6 w-6") %>
            </div>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="truncate text-sm font-medium text-gray-500 dark:text-gray-400">Organizations</dt>
              <dd class="text-lg font-semibold text-gray-900 dark:text-white"><%= @organizations_count %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <div class="overflow-hidden rounded-lg bg-white shadow dark:bg-gray-800">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="flex h-10 w-10 items-center justify-center rounded-md bg-teal-500 text-white">
              <%= icon(:users, classes: "h-6 w-6") %>
            </div>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="truncate text-sm font-medium text-gray-500 dark:text-gray-400">Users</dt>
              <dd class="text-lg font-semibold text-gray-900 dark:text-white"><%= @users_count %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <div class="overflow-hidden rounded-lg bg-white shadow dark:bg-gray-800">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="flex h-10 w-10 items-center justify-center rounded-md bg-cyan-500 text-white">
              <%= icon(:communities, classes: "h-6 w-6") %>
            </div>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="truncate text-sm font-medium text-gray-500 dark:text-gray-400">Communities</dt>
              <dd class="text-lg font-semibold text-gray-900 dark:text-white"><%= @communities_count %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <div class="overflow-hidden rounded-lg bg-white shadow dark:bg-gray-800">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="flex h-10 w-10 items-center justify-center rounded-md bg-indigo-500 text-white">
              <%= icon(:units, classes: "h-6 w-6") %>
            </div>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="truncate text-sm font-medium text-gray-500 dark:text-gray-400">Units</dt>
              <dd class="text-lg font-semibold text-gray-900 dark:text-white"><%= @units_count %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-8 grid grid-cols-1 gap-6 lg:grid-cols-2">
    <div class="overflow-hidden rounded-lg bg-white shadow dark:bg-gray-800">
      <div class="p-6">
        <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Bills Status</h2>
        <div class="space-y-4">
          <div class="flex items-center justify-between">
            <span class="text-sm text-gray-600 dark:text-gray-400">Pending</span>
            <span class="text-lg font-semibold text-yellow-600 dark:text-yellow-400"><%= @pending_bills_count %></span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-sm text-gray-600 dark:text-gray-400">Paid</span>
            <span class="text-lg font-semibold text-green-600 dark:text-green-400"><%= @paid_bills_count %></span>
          </div>
        </div>
      </div>
    </div>

    <div class="overflow-hidden rounded-lg bg-white shadow dark:bg-gray-800">
      <div class="p-6">
        <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Total Payments</h2>
        <div class="text-3xl font-bold text-gray-900 dark:text-white">
          <%= number_to_currency(@total_payments, unit: "$", separator: ".", delimiter: ".") %>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-8 overflow-hidden rounded-lg bg-white shadow dark:bg-gray-800">
    <div class="p-6">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Recent Payments</h2>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
          <thead class="bg-gray-50 dark:bg-gray-700">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500 dark:text-gray-300">ID</th>
              <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500 dark:text-gray-300">Amount</th>
              <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500 dark:text-gray-300">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500 dark:text-gray-300">Date</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200 dark:bg-gray-800 dark:divide-gray-700">
            <% if @recent_payments.any? %>
              <% @recent_payments.each do |payment| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">#<%= payment.id %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">
                    <%= number_to_currency(payment.amount, unit: "$", separator: ".", delimiter: ".") %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= payment.authorized? ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200' : 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200' %>">
                      <%= payment.status %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                    <%= payment.created_at.strftime("%b %d, %Y") %>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="4" class="px-6 py-4 text-center text-sm text-gray-500 dark:text-gray-400">No payments yet</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
