  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Dashboard</h1>
    <p class="mt-2 text-sm text-gray-600">Overview of your system</p>
  </div>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
    <div class="overflow-hidden rounded-lg bg-white shadow">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="flex h-10 w-10 items-center justify-center rounded-md bg-blue-500 text-white">
              <%= icon(:organizations, classes: "h-6 w-6") %>
            </div>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="truncate text-sm font-medium text-gray-500">Organizations</dt>
              <dd class="text-lg font-semibold text-gray-900"><%= @organizations_count %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <div class="overflow-hidden rounded-lg bg-white shadow">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="flex h-10 w-10 items-center justify-center rounded-md bg-teal-500 text-white">
              <%= icon(:users, classes: "h-6 w-6") %>
            </div>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="truncate text-sm font-medium text-gray-500">Users</dt>
              <dd class="text-lg font-semibold text-gray-900"><%= @users_count %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <div class="overflow-hidden rounded-lg bg-white shadow">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="flex h-10 w-10 items-center justify-center rounded-md bg-indigo-500 text-white">
              <%= icon(:units, classes: "h-6 w-6") %>
            </div>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="truncate text-sm font-medium text-gray-500">Units</dt>
              <dd class="text-lg font-semibold text-gray-900"><%= @units_count %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <%= render "shared/economic_indicators", indicators: @indicators %>
  </div>

  <div class="mt-8 grid grid-cols-1 gap-6 lg:grid-cols-2">
    <div class="overflow-hidden rounded-lg bg-white shadow">
      <div class="p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Bills Status</h2>
        <div class="space-y-4">
          <div class="flex items-center justify-between">
            <span class="text-sm text-gray-600">Pending</span>
            <span class="text-lg font-semibold text-yellow-600"><%= @pending_bills_count %></span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-sm text-gray-600">Paid</span>
            <span class="text-lg font-semibold text-green-600"><%= @paid_bills_count %></span>
          </div>
        </div>
      </div>
    </div>

    <div class="overflow-hidden rounded-lg bg-white shadow">
      <div class="p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Total Payments</h2>
        <div class="text-3xl font-bold text-gray-900">
          <%= number_to_currency(@total_payments, unit: "$", separator: ".", delimiter: ".") %>
        </div>
      </div>
    </div>
  </div>

  <% if @technical_errors.any? %>
    <div class="mt-8 overflow-hidden rounded-lg bg-white shadow">
      <div class="p-6">
        <div class="mb-4 flex items-center justify-between">
          <h2 class="text-lg font-semibold text-gray-900">Errores Técnicos Pendientes</h2>
          <%= link_to "Ver todas las corridas", admin_charge_runs_path, class: "text-sm text-blue-600 hover:text-blue-900" %>
        </div>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Organización</th>
                <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Unidad</th>
                <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Error</th>
                <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Intentos</th>
                <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Fecha</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @technical_errors.each do |attempt| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= attempt.bill.organization.name %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= attempt.bill.unit.number %>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-500">
                    <span class="text-xs"><%= truncate(attempt.error_message, length: 60) %></span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= attempt.retry_count %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= attempt.created_at.strftime("%d/%m/%Y %H:%M") %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>

  <div class="mt-8 overflow-hidden rounded-lg bg-white shadow">
    <div class="p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Recent Payments</h2>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">ID</th>
              <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Amount</th>
              <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Date</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if @recent_payments.any? %>
              <% @recent_payments.each do |payment| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">#<%= payment.id %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= number_to_currency(payment.amount, unit: "$", separator: ".", delimiter: ".") %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= payment.status_authorized? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                      <%= payment.status %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= payment.created_at.strftime("%b %d, %Y") %>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="4" class="px-6 py-4 text-center text-sm text-gray-500">No payments yet</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
