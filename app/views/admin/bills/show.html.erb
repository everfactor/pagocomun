<div class="mx-auto max-w-7xl">
  <div class="mb-8 flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Bill #<%= @bill.id %></h1>
      <p class="mt-2 text-sm text-gray-600">Bill details</p>
    </div>
    <%= link_to "Back to List", admin_bills_path, class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
  </div>

  <div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
    <div class="overflow-hidden rounded-lg bg-white shadow">
      <div class="p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Bill Information</h2>
        <dl class="space-y-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">Unit</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= link_to "#{@bill.unit.number} - #{@bill.unit.organization.name}", admin_unit_path(@bill.unit), class: "text-blue-600 hover:text-blue-900" %>
            </dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Period</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @bill.period %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Amount</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= number_to_currency(@bill.amount, unit: "$", separator: ".", delimiter: ".") %>
            </dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Due Date</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @bill.due_date ? @bill.due_date.strftime("%B %d, %Y") : "N/A" %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Status</dt>
            <dd class="mt-1">
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%=
                case @bill.status
                when 'paid'
                  'bg-green-100 text-green-800'
                when 'pending'
                  'bg-yellow-100 text-yellow-800'
                when 'failed'
                  'bg-red-100 text-red-800'
                else
                  'bg-gray-100 text-gray-800'
                end
              %>">
                <%= @bill.status.humanize %>
              </span>
            </dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Auto Charge</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @bill.auto_charge? ? "Yes" : "No" %></dd>
          </div>
        </dl>
      </div>
    </div>

    <div class="overflow-hidden rounded-lg bg-white shadow">
      <div class="p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Related Data</h2>
        <dl class="space-y-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">Payments</dt>
            <dd class="mt-1 text-2xl font-semibold text-gray-900"><%= @bill.payments.count %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Created At</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @bill.created_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Last Updated</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @bill.updated_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
          </div>
        </dl>
      </div>
    </div>
  </div>
</div>
