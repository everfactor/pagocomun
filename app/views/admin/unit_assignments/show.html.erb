<div class="mx-auto max-w-7xl">
  <div class="mb-8 flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Unit Assignment #<%= @unit_assignment.id %></h1>
      <p class="mt-2 text-sm text-gray-600">Assignment details</p>
    </div>
    <div class="flex gap-2">
      <%= link_to "Edit", edit_admin_unit_assignment_path(@unit_assignment), class: "rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500" %>
      <%= link_to "Back to List", admin_unit_assignments_path, class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
    <div class="overflow-hidden rounded-lg bg-white shadow">
      <div class="p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Assignment Information</h2>
        <dl class="space-y-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">Unit</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= link_to "#{@unit_assignment.unit.number} - #{@unit_assignment.unit.organization.name}", admin_unit_path(@unit_assignment.unit), class: "text-blue-600 hover:text-blue-900" %>
            </dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">User</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= link_to @unit_assignment.user.email_address, admin_user_path(@unit_assignment.user), class: "text-blue-600 hover:text-blue-900" %>
            </dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Starts On</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @unit_assignment.starts_on.strftime("%B %d, %Y") %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Ends On</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @unit_assignment.ends_on ? @unit_assignment.ends_on.strftime("%B %d, %Y") : "Ongoing" %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Active</dt>
            <dd class="mt-1">
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= @unit_assignment.active? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                <%= @unit_assignment.active? ? "Active" : "Inactive" %>
              </span>
            </dd>
          </div>
        </dl>
      </div>
    </div>

    <div class="overflow-hidden rounded-lg bg-white shadow">
      <div class="p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Timeline</h2>
        <dl class="space-y-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">Created At</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @unit_assignment.created_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Last Updated</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @unit_assignment.updated_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
          </div>
        </dl>
      </div>
    </div>
  </div>
</div>
