<%= form_with model: [:admin, unit_assignment], local: true, data: { turbo: true } do |f| %>
  <% if unit_assignment.errors.any? %>
    <div class="rounded-md bg-red-50 p-4 mb-6">
      <div class="text-sm font-medium text-red-800">
        <p class="mb-2">Please fix the following errors:</p>
        <ul class="list-disc list-inside space-y-1">
          <% unit_assignment.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="space-y-6">
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <div>
        <%= f.label :unit_id, "Unit", class: "block text-sm font-medium leading-6 text-gray-900" %>
        <div class="mt-2">
          <%= f.collection_select :unit_id, units, :id, lambda { |u| "#{u.number} - #{u.organization.name}" }, { prompt: "Select a unit" }, { required: true, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm" } %>
        </div>
      </div>

      <div>
        <%= f.label :user_id, "User", class: "block text-sm font-medium leading-6 text-gray-900" %>
        <div class="mt-2">
          <%= f.collection_select :user_id, users, :id, :email_address, { prompt: "Select a user" }, { required: true, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm" } %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <div>
        <%= f.label :starts_on, "Starts On", class: "block text-sm font-medium leading-6 text-gray-900" %>
        <div class="mt-2">
          <%= f.date_field :starts_on, required: true, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm" %>
        </div>
      </div>

      <div>
        <%= f.label :ends_on, "Ends On", class: "block text-sm font-medium leading-6 text-gray-900" %>
        <div class="mt-2">
          <%= f.date_field :ends_on, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm" %>
          <p class="mt-1 text-xs text-gray-500">Leave blank for ongoing assignment</p>
        </div>
      </div>
    </div>

    <div>
      <%= f.label :active, "Active", class: "block text-sm font-medium leading-6 text-gray-900" %>
      <div class="mt-2">
        <%= f.check_box :active, class: "h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-600" %>
        <span class="ml-2 text-sm text-gray-500">Assignment is active</span>
      </div>
    </div>

    <div class="flex items-center justify-end gap-4 pt-4 border-t border-gray-200">
      <%= link_to "Cancel", admin_unit_assignments_path, class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
      <%= f.submit class: "rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500" %>
    </div>
  </div>
<% end %>
