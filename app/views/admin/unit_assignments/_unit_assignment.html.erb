<tr id="<%= dom_id unit_assignment %>">
  <td class="px-6 py-4 whitespace-nowrap">
    <div class="text-sm font-medium text-gray-900">
      <%= link_to "#{unit_assignment.unit.number} (#{unit_assignment.unit.organization.name})", admin_unit_path(unit_assignment.unit), class: "text-blue-600 hover:text-blue-900" %>
    </div>
  </td>
  <td class="px-6 py-4 whitespace-nowrap">
    <div class="text-sm font-medium text-gray-900">
      <%= link_to unit_assignment.user.email_address, admin_user_path(unit_assignment.user), class: "text-blue-600 hover:text-blue-900" %>
    </div>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= unit_assignment.starts_on.strftime("%b %d, %Y") %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= unit_assignment.ends_on ? unit_assignment.ends_on.strftime("%b %d, %Y") : "Ongoing" %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap">
    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= unit_assignment.active? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
      <%= unit_assignment.active? ? "Active" : "Inactive" %>
    </span>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
    <%= link_to "View", admin_unit_assignment_path(unit_assignment), class: "text-blue-600 hover:text-blue-900 mr-4" %>
    <%= link_to "Edit", edit_admin_unit_assignment_path(unit_assignment), class: "text-indigo-600 hover:text-indigo-900 mr-4" %>
    <%= link_to "Delete", admin_unit_assignment_path(unit_assignment), method: :delete,
        data: { confirm: "Are you sure?", turbo_method: :delete },
        class: "text-red-600 hover:text-red-900" %>
  </td>
</tr>
