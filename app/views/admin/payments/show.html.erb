<div class="mx-auto max-w-7xl">
  <div class="mb-8 flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Payment #<%= @payment.id %></h1>
      <p class="mt-2 text-sm text-gray-600">Payment details</p>
    </div>
    <%= link_to "Back to List", admin_payments_path, class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
  </div>

  <div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
    <div class="overflow-hidden rounded-lg bg-white shadow">
      <div class="p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Payment Information</h2>
        <dl class="space-y-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">Amount</dt>
            <dd class="mt-1 text-lg font-semibold text-gray-900">
              <%= number_to_currency(@payment.amount, unit: "$", separator: ".", delimiter: ".") %>
            </dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Period</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @payment.period %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Status</dt>
            <dd class="mt-1">
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%=
                case @payment.status
                when 'authorized'
                  'bg-green-100 text-green-800'
                when 'initiated'
                  'bg-yellow-100 text-yellow-800'
                when 'failed'
                  'bg-red-100 text-red-800'
                when 'reversed'
                  'bg-orange-100 text-orange-800'
                when 'refunded'
                  'bg-blue-100 text-blue-800'
                else
                  'bg-gray-100 text-gray-800'
                end
              %>">
                <%= @payment.status.humanize %>
              </span>
            </dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Response Code</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @payment.response_code || "N/A" %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Transbank Auth Code</dt>
            <dd class="mt-1 text-sm text-gray-900 font-mono text-xs"><%= @payment.tbk_auth_code || "N/A" %></dd>
          </div>
          <% if @payment.economic_snapshot.present? %>
            <div class="border-t border-gray-100 pt-4 mt-4">
              <h3 class="text-sm font-semibold text-gray-900 mb-2">Economic Indicators (at time of payment)</h3>
              <div class="grid grid-cols-2 gap-4">
                <% if @payment.economic_snapshot["uf_value"] %>
                  <div>
                    <dt class="text-xs font-medium text-gray-500 uppercase">UF Value</dt>
                    <dd class="mt-1 text-sm text-gray-900"><%= number_to_currency(@payment.economic_snapshot["uf_value"], unit: "$", separator: ",", delimiter: ".") %></dd>
                  </div>
                <% end %>
                <% if @payment.economic_snapshot["ipc_value"] %>
                  <div>
                    <dt class="text-xs font-medium text-gray-500 uppercase">IPC</dt>
                    <dd class="mt-1 text-sm text-gray-900"><%= @payment.economic_snapshot["ipc_value"] %>%</dd>
                  </div>
                <% end %>
                <div class="col-span-2">
                  <dt class="text-xs font-medium text-gray-500 uppercase">Indicator Date</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @payment.economic_snapshot["indicator_date"]&.to_date&.strftime("%d/%m/%Y") || 'N/A' %></dd>
                </div>
              </div>
            </div>
          <% end %>
        </dl>
      </div>
    </div>

    <div class="overflow-hidden rounded-lg bg-white shadow">
      <div class="p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Related Information</h2>
        <dl class="space-y-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">Organization</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= link_to @payment.organization.name, admin_organization_path(@payment.organization), class: "text-blue-600 hover:text-blue-900" %>
            </dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Unit</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= link_to @payment.unit.number, admin_unit_path(@payment.unit), class: "text-blue-600 hover:text-blue-900" %>
            </dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Bill</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= link_to "Bill ##{@payment.bill.id}", admin_bill_path(@payment.bill), class: "text-blue-600 hover:text-blue-900" %>
            </dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Payer</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= link_to @payment.payer_user.email_address, admin_user_path(@payment.payer_user), class: "text-blue-600 hover:text-blue-900" %>
            </dd>
          </div>
          <% if @payment.payment_method %>
            <div>
              <dt class="text-sm font-medium text-gray-500">Payment Method</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= link_to "Payment Method ##{@payment.payment_method.id}", admin_payment_method_path(@payment.payment_method), class: "text-blue-600 hover:text-blue-900" %>
              </dd>
            </div>
          <% end %>
          <div>
            <dt class="text-sm font-medium text-gray-500">Parent Buy Order</dt>
            <dd class="mt-1 text-sm text-gray-900 font-mono text-xs"><%= @payment.parent_buy_order %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Child Buy Order</dt>
            <dd class="mt-1 text-sm text-gray-900 font-mono text-xs"><%= @payment.child_buy_order %></dd>
          </div>
        </dl>
      </div>
    </div>
  </div>

  <% if @payment.gateway_payload.present? %>
    <div class="mt-6 overflow-hidden rounded-lg bg-white shadow">
      <div class="p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Gateway Payload</h2>
        <pre class="text-xs text-gray-600 bg-gray-50 p-4 rounded overflow-auto"><%= JSON.pretty_generate(@payment.gateway_payload) %></pre>
      </div>
    </div>
  <% end %>
</div>
