<div class="mx-auto max-w-7xl">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Payments</h1>
    <p class="mt-2 text-sm text-gray-600">View all payments</p>
  </div>

  <div class="overflow-hidden rounded-lg bg-white shadow">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">ID</th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Organization</th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Unit</th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Amount</th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Period</th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Status</th>
            <th class="px-6 py-3 text-right text-xs font-medium uppercase tracking-wider text-gray-500">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% if @payments.any? %>
            <% @payments.each do |payment| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">#<%= payment.id %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= link_to payment.organization.name, admin_organization_path(payment.organization), class: "text-blue-600 hover:text-blue-900" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= link_to payment.unit.number, admin_unit_path(payment.unit), class: "text-blue-600 hover:text-blue-900" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  <%= number_to_currency(payment.amount, unit: "$", separator: ".", delimiter: ".") %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= payment.period %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%=
                    case payment.status
                    when 'authorized'
                      'bg-green-100 text-green-800'
                    when 'initiated'
                      'bg-yellow-100 text-yellow-800'
                    when 'failed'
                      'bg-red-100 text-red-800'
                    when 'reversed'
                      'bg-orange-100 text-orange-800'
                    when 'refunded'
                      'bg-blue-100 text-blue-800'
                    else
                      'bg-gray-100 text-gray-800'
                    end
                  %>">
                    <%= payment.status.humanize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <%= link_to "View", admin_payment_path(payment), class: "text-blue-600 hover:text-blue-900" %>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="7" class="px-6 py-4 text-center text-sm text-gray-500">No payments found</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
