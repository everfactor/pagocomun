<tr id="<%= dom_id payment_method %>">
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    #<%= payment_method.unit_user_assignment_id %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap">
    <div class="text-sm font-medium text-gray-900">
      <%= link_to payment_method.user.email_address, admin_user_path(payment_method.user), class: "text-blue-600 hover:text-blue-900" %>
    </div>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= payment_method.unit.number %> <%= payment_method.unit.tower %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= payment_method.card_type || "N/A" %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= payment_method.card_last_4 || "N/A" %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap">
    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= payment_method.active? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
      <%= payment_method.active? ? "Active" : "Inactive" %>
    </span>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
    <%= link_to "View", admin_payment_method_path(payment_method), class: "text-blue-600 hover:text-blue-900 mr-4" %>
    <%= link_to "Edit", edit_admin_payment_method_path(payment_method), class: "text-indigo-600 hover:text-indigo-900 mr-4" %>
    <%= link_to "Delete", admin_payment_method_path(payment_method), method: :delete,
        data: { confirm: "Are you sure?", turbo_method: :delete },
        class: "text-red-600 hover:text-red-900" %>
  </td>
</tr>
