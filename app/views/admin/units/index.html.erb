<div class="mx-auto max-w-7xl">
  <div class="mb-8 flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Units</h1>
      <p class="mt-2 text-sm text-gray-600">
        <% if @organization %>
          Units for <%= @organization.name %>
        <% else %>
          All units
        <% end %>
      </p>
    </div>
    <div class="flex gap-2">
      <% if @organization %>
        <%= link_to "New Unit", new_admin_unit_path(organization_id: @organization.id), class: "rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500" %>
      <% else %>
        <%= link_to "New Unit", new_admin_unit_path, class: "rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500" %>
      <% end %>

      <% if @organization %>
        <%= link_to "Import (CSV)", new_unit_import_path(organization_id: @organization.id), class: "rounded-md bg-green-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-green-500" %>
      <% end %>
    </div>
  </div>

  <div class="overflow-hidden rounded-lg bg-white shadow">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <% unless @organization %>
              <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Organization</th>
            <% end %>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Number</th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Tower</th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Proration</th>
            <th class="px-6 py-3 text-right text-xs font-medium uppercase tracking-wider text-gray-500">Actions</th>
          </tr>
        </thead>
        <tbody id="units" class="bg-white divide-y divide-gray-200">
          <% if @units.any? %>
            <%= render @units %>
          <% else %>
            <tr>
              <td colspan="<%= @organization ? 4 : 5 %>" class="px-6 py-4 text-center text-sm text-gray-500">No units found</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
