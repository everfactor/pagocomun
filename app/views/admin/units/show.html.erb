<div class="mx-auto max-w-7xl">
  <div class="mb-8 flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Unit <%= @unit.number %></h1>
      <p class="mt-2 text-sm text-gray-600">Unit details</p>
    </div>
    <div class="flex gap-2">
      <%= link_to "Edit", edit_admin_unit_path(@unit), class: "rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500" %>
      <%= link_to "Back to List", admin_units_path(organization_id: @unit.organization_id), class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
    <div class="overflow-hidden rounded-lg bg-white shadow">
      <div class="p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Unit Information</h2>
        <dl class="space-y-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">Number</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @unit.number %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Tower</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @unit.tower || "N/A" %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Proration</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @unit.proration || "N/A" %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Organization</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= link_to @unit.organization.name, admin_organization_path(@unit.organization), class: "text-blue-600 hover:text-blue-900" %>
            </dd>
          </div>
        </dl>
      </div>
    </div>

    <div class="overflow-hidden rounded-lg bg-white shadow">
      <div class="p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Related Data</h2>
        <dl class="space-y-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">Assigned Users</dt>
            <dd class="mt-1 text-2xl font-semibold text-gray-900"><%= @unit.assigned_users.count %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Bills</dt>
            <dd class="mt-1 text-2xl font-semibold text-gray-900"><%= @unit.bills.count %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Payments</dt>
            <dd class="mt-1 text-2xl font-semibold text-gray-900"><%= @unit.payments.count %></dd>
          </div>
        </dl>
      </div>
    </div>
  </div>
</div>
