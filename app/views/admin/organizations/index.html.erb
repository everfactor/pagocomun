<div class="mx-auto max-w-7xl">
  <div class="mb-8 flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Organizations</h1>
      <p class="mt-2 text-sm text-gray-600">Manage all organizations</p>
    </div>
    <div class="relative inline-block text-left" data-controller="dropdown" data-action="click@window->dropdown#clickOutside">
      <button type="button"
              class="inline-flex w-full justify-center gap-x-1.5 rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500"
              id="menu-button-admin"
              aria-expanded="true"
              aria-haspopup="true"
              data-action="click->dropdown#toggle">
        New Organization
        <svg class="-mr-1 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
          <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
        </svg>
      </button>

      <div class="absolute right-0 z-10 mt-2 w-56 origin-top-right rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none hidden"
           role="menu"
           aria-orientation="vertical"
           aria-labelledby="menu-button-admin"
           tabindex="-1"
           data-dropdown-target="menu">
        <div class="py-1" role="none">
          <%= link_to "Community", new_admin_organization_path(org_type: 'community'), class: "text-gray-700 block px-4 py-2 text-sm hover:bg-gray-100", role: "menuitem", tabindex: "-1" %>
          <%= link_to "Rental Space", new_admin_organization_path(org_type: 'rental_space'), class: "text-gray-700 block px-4 py-2 text-sm hover:bg-gray-100", role: "menuitem", tabindex: "-1" %>
        </div>
      </div>
    </div>
  </div>

  <div class="overflow-hidden rounded-lg bg-white shadow">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Name</th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">RUT</th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Type</th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Owner</th>
            <th class="px-6 py-3 text-right text-xs font-medium uppercase tracking-wider text-gray-500">Actions</th>
          </tr>
        </thead>
        <tbody id="organizations" class="bg-white divide-y divide-gray-200">
          <% if @organizations.any? %>
            <%= render @organizations %>
          <% else %>
            <tr>
              <td colspan="6" class="px-6 py-4 text-center text-sm text-gray-500">No organizations found</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <% if @pagy.pages > 1 %>
    <div class="mt-6 flex justify-center">
      <%== @pagy.series_nav %>
    </div>
  <% end %>
</div>
