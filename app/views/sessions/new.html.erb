<div class="flex min-h-full flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <div class="flex justify-center">
      <h1 class="text-3xl font-bold text-blue-600 dark:text-blue-400">Pago Com√∫n</h1>
    </div>
    <h2 class="mt-6 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900 dark:text-white">
      Sign in to your account
    </h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-[480px]">
    <div class="bg-white px-6 py-12 shadow sm:rounded-lg sm:px-12 dark:bg-gray-800">
      <%= form_with url: login_path, method: :post, local: true, class: "space-y-6" do |f| %>
        <div>
          <%= f.label :email_address, "Email address", class: "block text-sm font-medium leading-6 text-gray-900 dark:text-white" %>
          <div class="mt-2">
            <%= f.email_field :email_address, autocomplete: "email", required: true, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm/6 dark:bg-gray-700 dark:text-white dark:ring-gray-600 dark:placeholder:text-gray-400 dark:focus:ring-blue-500" %>
          </div>
        </div>

        <div>
          <%= f.label :password, "Password", class: "block text-sm font-medium leading-6 text-gray-900 dark:text-white" %>
          <div class="mt-2">
            <%= f.password_field :password, autocomplete: "current-password", required: true, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm/6 dark:bg-gray-700 dark:text-white dark:ring-gray-600 dark:placeholder:text-gray-400 dark:focus:ring-blue-500" %>
          </div>
        </div>

        <% if alert %>
          <div class="rounded-md bg-red-50 p-4 dark:bg-red-900/20">
            <p class="text-sm font-medium text-red-800 dark:text-red-200"><%= alert %></p>
          </div>
        <% end %>

        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-600 dark:border-gray-600 dark:bg-gray-700" %>
            <%= f.label :remember_me, "Remember me", class: "ml-3 block text-sm leading-6 text-gray-900 dark:text-white" %>
          </div>
        </div>

        <div>
          <%= f.submit "Sign in", class: "flex w-full justify-center rounded-md bg-blue-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 dark:bg-blue-500 dark:hover:bg-blue-400" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
