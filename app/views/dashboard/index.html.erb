<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900"><%= t('dashboard.index.welcome', name: @user.first_name) %></h1>
    <p class="mt-2 text-sm text-gray-600">
      <% if @unit %>
        <%= t('dashboard.index.unit', unit: "#{@unit.number} - #{@unit.tower}") %>
      <% else %>
        <%= t('dashboard.index.no_unit') %>
      <% end %>
    </p>
  </div>

  <% if @user.payment_methods.any? %>
    <div class="mb-8 overflow-hidden rounded-lg bg-green-50 shadow p-6 border-l-4 border-green-500">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="h-6 w-6 text-green-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-green-800"><%= t('dashboard.index.autopay_active') %></h3>
          <div class="mt-2 text-sm text-green-700">
            <p><%= t('dashboard.index.autopay_success_detail') %></p>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <div class="mb-8 overflow-hidden rounded-lg bg-white shadow p-6 border-l-4 border-blue-500">
      <div class="flex items-center justify-between">
        <div>
          <h2 class="text-xl font-bold text-gray-900"><%= t('dashboard.index.autopay_not_enabled') %></h2>
          <p class="mt-1 text-sm text-gray-600"><%= t('dashboard.index.autopay_not_enabled_detail') %></p>
        </div>
        <%= button_to t('dashboard.index.enroll_card'), payment_methods_path(user_id: @user.to_gid_param, id: @user.to_gid_param), method: :post, data: { turbo: false }, class: "rounded-md bg-blue-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600" %>
      </div>
    </div>
  <% end %>
</div>
