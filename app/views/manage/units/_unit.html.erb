<tr id="<%= dom_id unit %>">
  <% unless local_assigns[:hide_organization] %>
    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
      <%= link_to unit.organization.name, admin_organization_path(unit.organization), class: "text-blue-600 hover:text-blue-900" %>
    </td>
  <% end %>
  <td class="px-6 py-4 whitespace-nowrap">
    <div class="text-sm font-medium text-gray-900">
      <%= link_to unit.number, admin_unit_path(unit), class: "text-blue-600 hover:text-blue-900" %>
    </div>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= unit.tower || "N/A" %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= unit.email %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= unit.mobile_number || "N/A" %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
    <%= link_to "View", admin_unit_path(unit), class: "text-blue-600 hover:text-blue-900 mr-4" %>
    <%= link_to "Edit", edit_admin_unit_path(unit), class: "text-indigo-600 hover:text-indigo-900 mr-4" %>
    <%= link_to "Delete", admin_unit_path(unit), method: :delete,
        data: { confirm: "Are you sure?", turbo_method: :delete },
        class: "text-red-600 hover:text-red-900" %>
  </td>
</tr>
