<div class="mx-auto max-w-7xl">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Cobros</h1>
    <p class="mt-2 text-sm text-gray-600">Ver todos los cobros</p>
  </div>

  <div class="overflow-hidden rounded-lg bg-white shadow">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Unidad</th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Periodo</th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Monto</th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Vencimiento</th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Estado</th>
            <th class="px-6 py-3 text-right text-xs font-medium uppercase tracking-wider text-gray-500">Acciones</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% if @bills.any? %>
            <% @bills.each do |bill| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900">
                    <%= link_to "#{bill.unit.number} (#{bill.unit.organization.name})", manage_unit_path(bill.unit), class: "text-blue-600 hover:text-blue-900" %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= bill.period %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= number_to_currency(bill.amount, unit: "$", separator: ".", delimiter: ".") %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= bill.due_date ? bill.due_date.strftime("%d/%m/%Y") : "N/A" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%=
                    case bill.status
                    when 'paid'
                      'bg-green-100 text-green-800'
                    when 'pending'
                      'bg-yellow-100 text-yellow-800'
                    when 'failed'
                      'bg-red-100 text-red-800'
                    else
                      'bg-gray-100 text-gray-800'
                    end
                  %>">
                    <%= bill.status.humanize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <%= link_to "Ver", manage_bill_path(bill), class: "text-blue-600 hover:text-blue-900" %>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="6" class="px-6 py-4 text-center text-sm text-gray-500">No se encontraron cobros</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
