<div class="mx-auto max-w-7xl">
  <div class="mb-8 flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Cobros</h1>
      <p class="mt-2 text-sm text-gray-600">
        <% if @organization %>
          Gestionando cobros para <strong><%= @organization.name %></strong>
        <% else %>
          Ver todos los cobros de sus comunidades
        <% end %>
      </p>
    </div>
    <div class="flex gap-4">
      <% if @organization %>
        <%= link_to "Importar Cobros (CSV)", new_manage_organization_bill_import_path(@organization), class: "rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500" %>
      <% end %>
    </div>
  </div>

  <div class="mb-6 grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
    <div class="rounded-lg bg-white p-6 shadow">
      <%= form_tag manage_bills_path, method: :get, class: "flex flex-col gap-4" do %>
        <div>
          <label for="organization_id" class="block text-sm font-medium text-gray-700">Comunidad</label>
          <%= select_tag :organization_id, options_from_collection_for_select(@organizations, :id, :name, params[:organization_id]), prompt: "Todas las comunidades", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", onchange: "this.form.submit()" %>
        </div>
        <div>
          <label for="period" class="block text-sm font-medium text-gray-700">Periodo</label>
          <%= select_tag :period, options_for_select(Bill.period_options, params[:period]), prompt: "Todos los periodos", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", onchange: "this.form.submit()" %>
        </div>
        <div>
          <label for="status" class="block text-sm font-medium text-gray-700">Estado</label>
          <%= select_tag :status, options_for_select(Bill.statuses.keys.map { |s| [s.humanize, s] }, params[:status]), prompt: "Todos los estados", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", onchange: "this.form.submit()" %>
        </div>
        <div class="flex justify-end">
          <%= submit_tag "Filtrar", class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>

  <%= render "shared/bills_table", bills: @bills, namespace: :manage %>
  <% if @pagy.pages > 1 %>
    <div class="mt-6 flex justify-center">
      <%== @pagy.series_nav %>
    </div>
  <% end %>
</div>
