<div class="mx-auto max-w-7xl">
  <div class="mb-8 flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Cobros</h1>
      <p class="mt-2 text-sm text-gray-600">
        <% if @organization %>
          Gestionando cobros para <strong><%= @organization.name %></strong>
        <% else %>
          Ver todos los cobros de sus comunidades
        <% end %>
      </p>
    </div>
    <div class="flex gap-4">
      <% if @organization %>
        <%= link_to "Importar Cobros (CSV)", new_manage_organization_bill_import_path(@organization), class: "rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500" %>
      <% end %>
    </div>
  </div>

  <div class="mb-6 grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
    <div class="rounded-lg bg-white p-6 shadow">
      <%= form_tag manage_bills_path, method: :get, class: "flex flex-col gap-4" do %>
        <div>
          <label for="organization_id" class="block text-sm font-medium text-gray-700">Comunidad</label>
          <%= select_tag :organization_id, options_from_collection_for_select(@organizations, :id, :name, params[:organization_id]), prompt: "Todas las comunidades", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", onchange: "this.form.submit()" %>
        </div>
        <div>
          <label for="period" class="block text-sm font-medium text-gray-700">Periodo</label>
          <%= select_tag :period, options_for_select(Bill.period_options, params[:period]), prompt: "Todos los periodos", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", onchange: "this.form.submit()" %>
        </div>
        <div>
          <label for="status" class="block text-sm font-medium text-gray-700">Estado</label>
          <%= select_tag :status, options_for_select(Bill.statuses.keys.map { |s| [s.humanize, s] }, params[:status]), prompt: "Todos los estados", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", onchange: "this.form.submit()" %>
        </div>
        <div class="flex justify-end">
          <%= submit_tag "Filtrar", class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="overflow-hidden rounded-lg bg-white shadow">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Unidad</th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Periodo</th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Monto</th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Vencimiento</th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Estado</th>
            <th class="px-6 py-3 text-right text-xs font-medium uppercase tracking-wider text-gray-500">Acciones</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% if @bills.any? %>
            <% @bills.each do |bill| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900">
                    <%= link_to "#{bill.unit.number} (#{bill.unit.tower})", manage_organization_unit_path(bill.unit.organization, bill.unit), class: "text-blue-600 hover:text-blue-900" %>
                    <div class="text-xs text-gray-500"><%= bill.unit.organization.name %></div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= bill.period %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= number_to_currency(bill.amount, unit: "$", separator: ".", delimiter: ".") %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= bill.due_date ? bill.due_date.strftime("%d/%m/%Y") : "N/A" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%=
                    case bill.status
                    when 'paid'
                      'bg-green-100 text-green-800'
                    when 'pending'
                      'bg-yellow-100 text-yellow-800'
                    when 'failed'
                      'bg-red-100 text-red-800'
                    else
                      'bg-gray-100 text-gray-800'
                    end
                  %>">
                    <%= bill.status.humanize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <%= link_to "Ver", manage_bill_path(bill), class: "text-blue-600 hover:text-blue-900" %>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="6" class="px-6 py-4 text-center text-sm text-gray-500">No se encontraron cobros</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <% if @pagy.pages > 1 %>
    <div class="mt-6 flex justify-center">
      <%== @pagy.series_nav %>
    </div>
  <% end %>
</div>
