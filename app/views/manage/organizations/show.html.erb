<div class="mx-auto max-w-7xl">
  <div class="mb-8 flex items-center justify-between">
    <div>
      <nav class="flex mb-2" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2">
          <li><%= link_to "Organizaciones", manage_organizations_path, class: "text-sm font-medium text-gray-500 hover:text-gray-700" %></li>
          <li class="flex items-center space-x-2">
             <svg class="h-5 w-5 flex-shrink-0 text-gray-400" fill="currentColor" viewBox="0 0 20 20"><path d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" /></svg>
             <span class="text-sm font-medium text-gray-500"><%= @organization.name %></span>
          </li>
        </ol>
      </nav>
      <h1 class="text-3xl font-bold text-gray-900"><%= @organization.name %></h1>
    </div>
    <div class="flex gap-4">
      <%= link_to "Gestionar Unidades", manage_organization_units_path(@organization), class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
      <% if Current.user.role_super_admin? || Current.user.can_manage_organization?(@organization) %>
        <% if Current.user.can_create_users_for?(@organization) %>
          <%= link_to "Gestionar Usuarios", manage_users_path(organization_id: @organization.id), class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
        <% end %>
        <%= link_to "Importar Unidades", new_manage_organization_unit_import_path(@organization), class: "rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500" %>
        <%= link_to "Importar Cobros", new_manage_organization_bill_import_path(@organization), class: "rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500" %>
        <% if Current.user.can_edit_organization?(@organization) %>
          <%= link_to "Editar", edit_manage_organization_path(@organization), class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
    <div class="lg:col-span-2 space-y-6">
      <div class="overflow-hidden rounded-lg bg-white shadow">
        <div class="px-6 py-5 border-b border-gray-200">
          <h3 class="text-base font-semibold leading-6 text-gray-900">Informaci贸n General</h3>
        </div>
        <div class="px-6 py-5">
          <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
            <div>
              <dt class="text-sm font-medium text-gray-500">RUT</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= format_rut(@organization.rut) %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Tipo</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @organization.org_type.humanize %></dd>
            </div>
            <div class="sm:col-span-2">
              <dt class="text-sm font-medium text-gray-500">Direcci贸n</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @organization.address.presence || 'N/A' %></dd>
            </div>
             <div class="sm:col-span-2">
                <dt class="text-sm font-medium text-gray-500">Estado</dt>
                <dd class="mt-1">
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%=
                    case @organization.status
                    when 'approved'
                      'bg-green-100 text-green-800'
                    when 'pending'
                      'bg-yellow-100 text-yellow-800'
                    when 'rejected'
                      'bg-red-100 text-red-800'
                    else
                      'bg-gray-100 text-gray-800'
                    end
                  %>">
                    <%= @organization.status.humanize %>
                  </span>
                </dd>
              </div>
          </dl>
        </div>
      </div>
    </div>

    <div class="space-y-6">
      <div class="overflow-hidden rounded-lg bg-white shadow">
        <div class="px-6 py-5 border-b border-gray-200 bg-gray-50">
          <h3 class="text-base font-semibold leading-6 text-gray-900">Configuraci贸n Transbank</h3>
        </div>
        <div class="px-6 py-5">
          <dl class="space-y-4">
            <div>
              <dt class="text-xs font-medium text-gray-500 uppercase tracking-wider">C贸digo Comercio</dt>
              <dd class="mt-1 text-sm font-mono text-gray-900"><%= @organization.tbk_child_commerce_code %></dd>
            </div>
          </dl>
        </div>
      </div>
    </div>
  </div>
</div>
