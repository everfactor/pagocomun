<div class="mx-auto max-w-7xl">
  <div class="mb-8 flex items-center justify-between">
    <div>
      <nav class="flex mb-2" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2">
          <li><%= link_to "Usuarios", manage_users_path, class: "text-sm font-medium text-gray-500 hover:text-gray-700" %></li>
          <li class="flex items-center space-x-2">
             <svg class="h-5 w-5 flex-shrink-0 text-gray-400" fill="currentColor" viewBox="0 0 20 20"><path d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" /></svg>
             <span class="text-sm font-medium text-gray-500"><%= "#{@user.first_name} #{@user.last_name}" %></span>
          </li>
        </ol>
      </nav>
      <h1 class="text-3xl font-bold text-gray-900"><%= "#{@user.first_name} #{@user.last_name}" %></h1>
    </div>
    <div class="flex gap-4">
      <%= link_to "Editar", edit_manage_user_path(@user), class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
    </div>
  </div>

  <div class="overflow-hidden rounded-lg bg-white shadow">
    <div class="px-6 py-5 border-b border-gray-200">
      <h3 class="text-base font-semibold leading-6 text-gray-900">Detalles del Usuario</h3>
    </div>
    <div class="px-6 py-5">
      <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
        <div>
          <dt class="text-sm font-medium text-gray-500">Email</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @user.email_address %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Rol</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @user.role.humanize %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Estado</dt>
          <dd class="mt-1">
             <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%=
              case @user.status
              when 'approved'
                'bg-green-100 text-green-800'
              when 'pending'
                'bg-yellow-100 text-yellow-800'
              when 'rejected'
                'bg-red-100 text-red-800'
              else
                'bg-gray-100 text-gray-800'
              end
            %>">
              <%= @user.status.humanize %>
            </span>
          </dd>
        </div>
      </dl>
    </div>
  </div>
</div>
